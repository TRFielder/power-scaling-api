{
    "name": "power-scaling-api",
    "version": "0.0.1",
    "description": "",
    "author": "",
    "private": true,
    "license": "UNLICENSED",
    "scripts": {
        "build": "pnpm dlx @nestjs/cli build",
        "format": "pnpm exec prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
        "start": "pnpm dlx @nestjs/cli start",
        "start:dev": "pnpm dlx @nestjs/cli start --watch",
        "start:debug": "npnpm dlx @nestjs/cli start --debug --watch",
        "start:prod": "node dist/main",
        "lint": "pnpm biome lint .",
        "test": "jest",
        "test:watch": "jest --watch",
        "test:cov": "jest --coverage",
        "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
        "test:e2e": "pnpm run docker:up && pnpm exec dotenv -e .env.test.local -- pnpm exec prisma migrate deploy && pnpm exec dotenv -e .env.test.local -- jest -i --config ./test/jest-e2e.json",
        "docker:up": "docker compose up -d",
        "docker:down": "docker compose down",
        "prepare": "husky"
    },
    "dependencies": {
        "@biomejs/biome": "^1.9.4",
        "@faker-js/faker": "^9.3.0",
        "@nestjs/common": "^10.0.0",
        "@nestjs/config": "^3.3.0",
        "@nestjs/core": "^10.0.0",
        "@nestjs/platform-express": "^10.0.0",
        "@nestjs/swagger": "^8.1.0",
        "@prisma/client": "6.1.0",
        "@supabase/supabase-js": "^2.47.10",
        "dotenv-cli": "^8.0.0",
        "reflect-metadata": "^0.2.0",
        "rxjs": "^7.8.1"
    },
    "devDependencies": {
        "@nestjs/cli": "^10.0.0",
        "@nestjs/schematics": "^10.0.0",
        "@nestjs/testing": "^10.0.0",
        "@types/express": "^5.0.0",
        "@types/jest": "^29.5.2",
        "@types/multer": "^1.4.12",
        "@types/node": "^22.10.2",
        "@types/supertest": "^6.0.0",
        "@typescript-eslint/eslint-plugin": "^8.32.0",
        "@typescript-eslint/parser": "^8.18.2",
        "husky": "^9.1.7",
        "jest": "^29.5.0",
        "prettier": "^3.0.0",
        "prisma": "^6.1.0",
        "source-map-support": "^0.5.21",
        "supertest": "^7.0.0",
        "ts-jest": "^29.1.0",
        "ts-loader": "^9.4.3",
        "ts-node": "^10.9.1",
        "tsconfig-paths": "^4.2.0",
        "typescript": "^5.8.3"
    },
    "jest": {
        "moduleFileExtensions": [
            "js",
            "json",
            "ts"
        ],
        "rootDir": "src",
        "testRegex": ".*\\.spec\\.ts$",
        "transform": {
            "^.+\\.(t|j)s$": "ts-jest"
        },
        "collectCoverageFrom": [
            "**/*.(t|j)s"
        ],
        "coverageDirectory": "../coverage",
        "testEnvironment": "node"
    }
}
